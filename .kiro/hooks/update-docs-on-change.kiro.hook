{
  "name": "Update Docs on Source Change",
  "description": "Automatically regenerate pdoc documentation when Python files are saved",
  "enabled": true,
  "trigger": {
    "type": "fileEdited",
    "filePattern": "backend/**/*.py"
  },
  "action": {
    "type": "askAgent",
    "message": "Regenerate the API documentation by running: cd backend && pdoc main.py -o docs --no-search"
  }
}
