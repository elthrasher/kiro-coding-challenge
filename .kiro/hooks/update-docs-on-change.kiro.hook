{
  "name": "Update Docs on Source Change",
  "description": "Automatically regenerate pdoc documentation when Python files are saved",
  "enabled": true,
  "trigger": {
    "type": "onFileSave",
    "filePattern": "backend/**/*.py"
  },
  "action": {
    "type": "executeCommand",
    "command": "cd backend && pdoc main.py -o docs --no-search && echo 'âœ… Documentation updated successfully'"
  }
}
